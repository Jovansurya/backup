# Gunakan image PHP dengan Apache bawaan
FROM php:8.2

# Set working directory di dalam container
WORKDIR /var/www/html

# Install dependency yang dibutuhkan: zip, unzip, git, dan ekstensi PHP yang Laravel perlukan
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    libzip-dev \
    libonig-dev \
    libxml2-dev \
    && docker-php-ext-install pdo_mysql zip mbstring xml

RUN curl -sS https://getcomposer.org/installer | php && mv composer.phar /usr/local/bin/composer

# Install Composer global
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Copy semua file aplikasi ke dalam container
COPY . .

# Install dependencies PHP lewat Composer
RUN composer install 

# Salin file .env dari contoh
RUN cp .env.example .env

# Generate key aplikasi Laravel
RUN php artisan key:generate

# Jalankan migrasi dan seeding database
RUN php artisan migrate --seed

# Buka port 8001
EXPOSE 8001

# Jalankan aplikasi Laravel dengan built-in server pada port 8001
CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port=8001"]
